<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dash"
    android:orientation="vertical"
    tools:context=".DashBoard">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        app:srcCompat="@drawable/inovative1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_math" />

            <Button
                android:id="@+id/btn_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="Math's" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_eng" />

            <Button
                android:id="@+id/btn_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="English" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_hindi" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="Hindi" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_marathi" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="Marathi" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="184dp"
            android:layout_height="134dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_computer" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="Computer" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="64dp"
                android:layout_height="79dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/menu_science" />

            <Button
                android:id="@+id/btn_sci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/style"
                android:fontFamily="@font/arbutus_slab"
                android:text="Science" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>