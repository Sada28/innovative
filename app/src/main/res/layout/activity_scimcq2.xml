<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dash"
    android:orientation="vertical"
    tools:context=".Scimcq2">

    <TextView
        android:id="@+id/Que_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Que 2"
        android:textColor="#FD0000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text=" Find the yellow color fruit ?"
        android:textColor="#000000"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Opt1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ico_apple" />

        <ImageView
            android:id="@+id/Opt2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ico_banana" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Opt3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ico_orange" />

        <ImageView
            android:id="@+id/Opt4"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ico_watermel" />
    </LinearLayout>

</LinearLayout>